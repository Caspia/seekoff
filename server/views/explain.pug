extends layout

block content
  h1= title

  form(method='GET' action='/search')
    .form-group
      label(for='search_term') Search:
      input#search_term.form-control(type='text', name='search_term', value=query || '')
    button.btn.btn-primary(type='submit') Search
  hr
  if errors
    ul
      for error in errors
        p Errors:
        li!= error.msg || error
  if explainResults
    h3 Explanation of search score
    <div>!{explainResults}</div>
